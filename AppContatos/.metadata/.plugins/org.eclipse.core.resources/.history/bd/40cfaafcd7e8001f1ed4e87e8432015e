package br.com.dnl.AppContatos.Enum;

public enum OrderTipo {
	
	telefone_residencial(1),
	celular(2),
	whatsapp(3),
	email_pessoal(4),
	email_profissional(5);
	
	private final int codigo;

    OrderTipo(int codigo) {
        this.codigo = codigo;
    }

    public int getCodigo() {
        return codigo;
    }

    public static OrderTipo fromTipo(int codigo) {
        for (OrderTipo tipo : OrderTipo.values()) {
            if (tipo.getCodigo() == codigo) {
                return tipo;
            }
        }
        throw new IllegalArgumentException("Código inválido para OrderTipo: " + codigo);
    }
}